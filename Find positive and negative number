#include<iostream>
using namespace std;

int main() {
    int num;
    cout<<"Enter an integer: ";
    cin>>num;
    if (num>0){
        cout<<"The number is positive.";
    } 
    else if (num<0) {
        cout<<"The number is negative.";
    }
    return 0;
}

OUTPUT
Enter an integer: -24
The number is negative.

